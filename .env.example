# ──────────────────────────────────────────────
# Linkrift Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────

# ── Application ──────────────────────────────
APP_ENV=development                    # development | staging | production
APP_NAME=linkrift
APP_PORT=8080
APP_BASE_URL=http://localhost:8080
APP_REDIRECT_URL=http://localhost:8081
APP_FRONTEND_URL=http://localhost:3000
APP_SECRET_KEY=change-me-to-a-random-64-char-string

# ── Database (PostgreSQL) ────────────────────
DATABASE_URL=postgres://linkrift:linkrift_dev@localhost:5432/linkrift?sslmode=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=5m

# ── Redis ────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ── ClickHouse (Analytics) ───────────────────
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=linkrift_analytics
CLICKHOUSE_USER=linkrift
CLICKHOUSE_PASSWORD=linkrift_dev

# ── Meilisearch ──────────────────────────────
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=linkrift_dev_key

# ── Authentication ───────────────────────────
AUTH_TOKEN_SECRET=change-me-to-a-random-secret
AUTH_ACCESS_TOKEN_EXPIRY=15m
AUTH_REFRESH_TOKEN_EXPIRY=7d

# ── OAuth (Optional) ────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Email (SMTP) ────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@linkrift.io

# ── Storage (S3-compatible) ──────────────────
S3_ENDPOINT=
S3_BUCKET=linkrift
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# ── Cloudflare (Custom Domains) ──────────────
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ── License (Enterprise) ────────────────────
LICENSE_KEY=
LICENSE_PUBLIC_KEY_PATH=
LICENSE_CHECK_INTERVAL=1h

# ── Logging ──────────────────────────────────
LOG_LEVEL=debug                        # debug | info | warn | error
LOG_FORMAT=console                     # console | json

# ── Rate Limiting ────────────────────────────
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
